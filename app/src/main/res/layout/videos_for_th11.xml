<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@drawable/back1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip" android:layout_weight="0.8"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/toolbar"
                layout="@layout/tool_bar"
                />

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="550dp">







                <Button
                    android:layout_margin="150dp"
                    android:layout_width="300dp"
                    android:layout_height="58dp"
                    android:id="@+id/button5"
                    android:background="@drawable/gowipe_atck_selector"
                    android:layout_gravity="center_horizontal"
                    android:onClick="gowipe"/>
                <Button
                    android:layout_margin="220dp"
                    android:layout_width="300dp"
                    android:layout_height="58dp"
                    android:id="@+id/button6"
                    android:background="@drawable/gowiwi_selector"
                    android:layout_gravity="center_horizontal"
                    android:onClick="gowiwi"/>
                <Button
                    android:layout_margin="290dp"
                    android:layout_width="300dp"
                    android:layout_height="58dp"
                    android:id="@+id/button7"
                    android:background="@drawable/lavaloon_selector"
                    android:layout_gravity="center_horizontal"
                    android:onClick="lavaloon"/>


                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id" />



            </FrameLayout>

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="250dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer"
        />
</android.support.v4.widget.DrawerLayout>